<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    android:orientation="vertical" >

    <Button
        android:id="@+id/but_login1"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="92dp"
        android:layout_marginLeft="22dp"
        android:background="@drawable/but_login1" />

    <Button
        android:id="@+id/but_photo"
        android:layout_width="120dp"
        android:layout_height="33dp"
        android:layout_alignBaseline="@+id/but_login1"
        android:layout_alignBottom="@+id/but_login1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:background="@drawable/but_photo" />

</RelativeLayout>
